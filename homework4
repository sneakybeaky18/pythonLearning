# variant A
from functools import reduce

def func(x,y):
    z = x*y
    return z

list2 = [*range(99,1001)]
all = reduce(func, list2)
print(all)

#variant B
from functools import reduce
list2 = [*range(99,1001)]
all = reduce(lambda x,y: x*y, list2)
print(all)

