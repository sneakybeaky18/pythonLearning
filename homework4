#a
import random
user_number = int(input("Input min int"))
end_int = int(input("Input max int"))
print(random.randint(user_number, end_int))
#b
from itertools import cycle
import random as r

list = [*range(0,100)]
for el in cycle(list):
    if el > 90:
        break
    print(el)
    el += 1

