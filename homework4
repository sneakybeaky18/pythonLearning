#2

d2 = [300, 2, 12, 44, 1, 1, 4, 10, 7, 1, 78, 123, 55]
d = [el+2 for el in d2]
for i in range(1, len(d)):
    if d[i] > d[i - 1]:
        print(d[i])

#3


a = [el*34 for el in range(10,3000)]

for i in range(1, len(a)):
    if a[i] > a[i-1]:
        print(a[i])
list = [el%20 and el%21 for el in range(20,240)]
print(list)


