#вариант А

import datetime
a = int(input("Введите время в секундах: "))
time = str(datetime.timedelta(seconds=a))
print(time)

#вариант Б

time = int(input("Введите время в секундах"))

hours = time/3600
minutes = (time/60)%60
seconds = time%60

print(f"Часов: {hours}, минут: {minutes}, секунд: {seconds}")

